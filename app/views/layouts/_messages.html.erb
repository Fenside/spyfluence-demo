<% flash.each do |key, value| %>
  <% if key == 'alert' %>
    <div class="alert alert-danger alert-dismissible fade show">
      <a href="#" data-dismiss="alert" class="close">×</a>
      <li>
        <%= value %>
      </li>
    </div>
  <% elsif key == 'notice' %>
    <div class="alert alert-info alert-dismissible fade show">
      <a href="#" data-dismiss="alert" class="close">×</a>
      <li>
        <%= value %>
      </li>
    </div>
  <% else %>
    <div class="alert alert-<%= key %>">
      <a href="#" data-dismiss="alert" class="close">×</a>
      <ul>
        <li>
          <%= value %>
        </li>
      </ul>
    </div>
  <% end %>
<% end %>
