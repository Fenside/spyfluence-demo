  <%= stylesheet_link_tag 'bootstrap-tagsinput/bootstrap-tagsinput.css', media: 'all' %>
  
  <!-- Page -->
  <%= stylesheet_link_tag 'pages/account.css', media: 'all' %>
<% end %>

